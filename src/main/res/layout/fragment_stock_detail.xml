<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.StockDetail.StockDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loadingScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A0FFFFFF"
        android:elevation="5dp"
        android:visibility="gone"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/input"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/tickerInput"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="text"
            android:autofillHints="null"
            tools:ignore="LabelFor"
            android:background="@android:drawable/editbox_background_normal"/>
        <EditText
            android:id="@+id/dayInput"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="number"
            android:autofillHints="null"
            tools:ignore="LabelFor"
            android:background="@android:drawable/editbox_background_normal"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/controlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input"
        style="@style/Widget.AppCompat.ButtonBar.AlertDialog">
        <Button
            android:id="@+id/enter"
            android:text="Search"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/input"
            style="@style/Widget.AppCompat.Button.Borderless"
            tools:ignore="HardcodedText" />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/trade"
            android:text="@string/trade"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/input" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_meta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/controlBar"
        style="@style/mathFormula"
        android:textStyle="italic"/>

    <com.visight.util.stockChartView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/text_meta"
        android:id="@+id/myStockChart"
        app:axisColor="#FFFFFF"
        android:background="#232323"/>

    <ListView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/metaDataList"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/myStockChart"/>
</androidx.constraintlayout.widget.ConstraintLayout>